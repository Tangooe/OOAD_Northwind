@model IEnumerable<OOAD_Northwind.Models.Accountabilities>

@{
    ViewData["Title"] = "Index";
}

<h2>Accountabilities</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PartyANavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartyBNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Parties" asp-action="Details" asp-route-id="@item.PartyA">@item.PartyANavigation.Name</a>
            </td>
            <td>
                <a asp-controller="Parties" asp-action="Details" asp-route-id="@item.PartyB">@item.PartyBNavigation.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeNavigation.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
        </tr>
}
    </tbody>
</table>
